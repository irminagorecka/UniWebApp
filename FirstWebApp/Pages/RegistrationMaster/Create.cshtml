@page
@model FirstWebApp.Pages.RegistrationMaster.CreateModel

@{
    ViewData["Title"] = "Create";
}




<hr />
<div class="row">
    <div class="col-lg-9 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Formularz zapisu</h2>
        <form method="post">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Registration.Imie" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Registration.Imie" class="form-control" />
                         <span asp-validation-for="Registration.Imie" class="text-danger"></span>
                    </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Registration.Nazwisko" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                <input asp-for="Registration.Nazwisko" class="form-control" />
                <span asp-validation-for="Registration.Nazwisko" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Registration.Email" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                <input asp-for="Registration.Email" class="form-control" />
                <span asp-validation-for="Registration.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Registration.Telefon" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                <input asp-for="Registration.Telefon" class="form-control" />
                <span asp-validation-for="Registration.Telefon" class="text-danger"></span>
                </div>
            </div>
           
            <div class="row mb-3">
                <label asp-for="Registration.Kurs" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                <select asp-for="Registration.Kurs" class="form-select">
                    <option value="Kinesiotaping liftingujący twarzy">Kinesiotaping liftingujący twarzy</option>
                    <option value="Masaż klasyczny z technikami orientalnymi">Masaż klasyczny z technikami orientalnymi</option>
                    <option value="Masaż tajski">Masaż tajski</option>
                    <option value="Masaż twarzy Mukabhyanga">Masaż twarzy Mukabhyanga</option>

                    </select>
                <span asp-validation-for="Registration.Kurs" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="offset-sm-4 col-sm-8">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
            </div>
        </form>
    </div>
</div>

